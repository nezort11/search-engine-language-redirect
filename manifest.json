{
  "manifest_version": 3,
  "name": "Search engine language redirect",
  "version": "1.0",
  "description": "Redirect from Google to Yandex when searching query contains cyrillic (russian) letters.",
  "permissions": ["declarativeNetRequestWithHostAccess"],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.google.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "yandex16.png",
    "32": "yandex48.png",
    "48": "yandex48.png",
    "128": "yandex128.png"
  }
}
